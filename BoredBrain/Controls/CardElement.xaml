<UserControl x:Class="BoredBrain.CardElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BoredBrain"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" 
             MouseMove="Card_MouseMove" 
             MouseUp="Card_MouseUp" 
             Margin="10">
    <Border BorderBrush="Gray" BorderThickness="1">
        <Grid Height="auto" HorizontalAlignment="Stretch">
            <Grid.Background>
                <SolidColorBrush Color="#202020"/>
            </Grid.Background>
            <TextBlock Name="Title" Foreground="White" FontSize="16" TextWrapping="Wrap" Margin="10"></TextBlock>
        </Grid>
    </Border>
</UserControl>
