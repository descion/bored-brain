<UserControl x:Class="BoredBrain.Column"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BoredBrain"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" MinWidth="300">
    <Border BorderBrush="Black" BorderThickness="2px">
        <Grid Background="Transparent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" AllowDrop="True" Drop="Grid_Drop">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Name="Title"></Label>
            <StackPanel Orientation="Vertical" Name="Cards" Grid.Row="1"></StackPanel>
    </Grid>
    </Border>
</UserControl>
